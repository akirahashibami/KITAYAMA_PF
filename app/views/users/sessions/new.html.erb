<div id="login">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>

  <div class="signin">
    <p>アカウント未登録の方は<%= link_to "こちら", new_user_registration_path %></p>
  </div>

  <div class="top-page">
    <p><%= link_to "Topページへ", root_path %></p>
  </div>

  <% end %>

</div>
