<div id="videos" class="container">
  <div class="row">

    <div class="col-lg-3">
      <%= render partial: 'users/user_details', locals: { user: @user }  %>
    </div>

    <div class="col-lg-9">
      <h2>ユーザー投稿動画一覧</h2>

          <% @user_videos.each do |video| %>
          <div class="my-video container">
            <div class="row">
              <div class="col-lg-6">
                <%= link_to video_path(video) do %>
                  <div class="video">
                    <video src="<%= rails_blob_path(video.video) %>"　width="640" height="360" type="video/mp4" allowfullscreen></video>
                  </div>
                <% end %>
              </div>
              <div class="col-lg-6">
                <%= render partial: "users/attachment", locals: { user: video.user} %>
                <%= video.introduction %>
                <% unless video.user == current_user %>
                  <div id="favorites">
                    <%= render partial: 'videos/favorites', locals: { video: video}  %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="row">
              <%= link_to video.title %>
              <%= video.created_at %>
              <%# いいねとかが入る %>
            </div>
          </div>
          <% end %>

    </div>
  </div>
</div>
