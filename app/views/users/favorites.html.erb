<div id="videos">
  <%= render partial: 'users/user_details', locals: { user: @user }  %>

<div class="container">
  <div class="row">

    <div class="col-lg-12">
      <h2>お気に入り動画一覧</h2>

          <% @favorites.each do |video| %>
          <div class="my-video container">
            <div class="row">
              <div class="col-lg-6">
                <%= link_to video_path(video) do %>
                  <div class="video">
                    <video src="<%= rails_blob_path(video.video) %>"　width="640" height="360" type="video/mp4" allowfullscreen></video>
                  </div>
                <% end %>
              </div>
              <div class="col-lg-6">
                <%= image_tag(video.user.thumbnail) %>
                <%= video.introduction %>
                <div id="favorites">
                  <%= render partial: 'videos/favorited', locals: { video: video}  %>
                </div>
              </div>
            </div>
            <div class="row">
              <%= link_to video.title %>
              <%= video.created_at %>
              <%# いいねとかが入る %>
            </div>
          </div>
          <% end %>

    </div>
  </div>
</div>
</div>
