<div id="video_edit">
  <div class="container">

    <div class="row">
      <h2>動画の編集画面</h2>
    </div>

    <div class="upload row">
      <%= form_with model: @video, local: true do |f| %>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="video">
          <video src="<%= rails_blob_path(@video.video) %>" type="video/mp4" controls></video>
        </div>
      </div>

      <table class="table table-borderless col-lg-10 col-md-10 col-sm-11">
        <tbody>
          <tr>
            <td>タイトル</td>
            <td><%= f.text_field :title %></td>
          <tr>
            <td>動画の説明</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="link-box">
        <%= f.submit "編集", class: "btn btn-success" %>
        <%= link_to "キャンセル", videos_path, class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
