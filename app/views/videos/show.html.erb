<div class="container">
  <div class="row">

    <div class="col-xl-3">
      <%= render partial: 'users/user_details', locals: { user: @user }  %>
    </div>

    <div class="col-xl-9">
      <% if @video.video.attached? %>
      <div class="row">
        <video src="<%= rails_blob_path(@video.video) %>" type="video/mp4" controls></video>
      </div>
      <div class="row">
        <%= @video.title %>
      </div>
      <div class="row">
        <!-- いいねやPV数 -->
      </div>
      <div class="row">
        <%= @video.introduction %>
      </div>
      <div class="row">
        <!-- コメント機能 -->
      </div>
      <div class="row">
        <!-- 投稿コメント一覧 -->
      </div>
      <% end %>
      <%= link_to "編集する", edit_video_path(@video), class: "btn btn-success" %>
    </div>
  </div>
</div>
