<div id="index">
  <%= render partial: 'users/user_details', locals: { user: @user }  %>

<div class="container">
  <div class="row">
    
    <div class="col-xl-12">
      <div class="row">
        <h2>動画一覧</h2>
      </div>
      <div class="row">
        <% @videos.each do |video| %>
          <div class="col-xl-6">
            <%= link_to video_path(video) do %>
            <div class="video">
              <video src="<%= rails_blob_path(video.video) %>"　width="640" height="360" type="video/mp4" allowfullscreen></video>
            </div>
            <div class="video-data">
              <%= video.title %> <br>
              <%# <%= video.user.profile_image %>
              <%= video.user.name %>
              <%= video.created_at %>
              <!-- いいねとかが入ります -->
              <div id="likes">
                <%= render partial: 'videos/likes', locals: { video: video} %>
              </div>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
</div>
