<% if video.favorited_by?(current_user) %>
  <%= link_to video_favorites_path(video.id), method: :delete do %>
    <%= icon('fas', 'file-video') %>
    <p>お気に入りから削除</p>
  <% end %>
<% else %>
  <%= link_to video_favorites_path(video.id), method: :post do %>
    <%= icon('far', 'file-video') %>
    <p>お気に入りに保存する</p>
  <% end %>
<% end %>
