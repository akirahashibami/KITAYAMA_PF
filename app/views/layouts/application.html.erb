<!DOCTYPE html>
<html>
<head>
  <link href="https://fonts.googleapis.com/css2?family=Sriracha&display=swap" rel="stylesheet">
  <title>LifeLog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div id="wrapper">
    <header>
      <div class="logo">
        <%= link_to videos_path do  %>
          <%= image_tag asset_path('1_Primary_logo_on_transparent_308x65.png') %>
        <% end %>
      </div>

      <div id="search-box">
        <%= form_tag(search_path, :method => 'get') do %>
          <div class="input-tag">
            <%= text_field_tag :search, '', placeholder: '検索', value: params[:title] %>
          </div>
          <div class="submit tag">
            <%= button_tag type: 'submit', class: 'btn btn-default' do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="cp_fullscreenmenu">
        <input class="toggle" type="checkbox" />
        <div class="hamburger"><span></span></div>
        <div class="menu">
          <% if user_signed_in? %>
          <div>
            <ul>
              <li><%= link_to "Top", root_path %></li>
              <li><%= link_to "マイページ", user_path(current_user) %></li>
              <li><%= link_to "ムービー 一覧", videos_path %></li>
              <li><%= link_to "グループルーム作成", new_room_path %></li>
              <li><%= link_to "グループルーム一覧", rooms_path %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
          <% else %>
          <div>
            <ul>
              <li><%= link_to "Top", root_path %></li>
              <li><%= link_to "L/Logを始める", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path %></li>
              <li><%= link_to "このサイトについて", variouses_about_path %></li>
            </ul>
          </div>
          <% end %>
        </div>
      </div>
    </header>

    <div class="yield">
      <%= yield %>
    </div>

    <footer>
      <section>
        <h5>Copyright © katsuya kitayama</h5>
      </section>
    </footer>
  </div>
</body>

</html>
